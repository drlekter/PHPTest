{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{% block title %}ProntoPro.it{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('assets/css/jquery.tagsinput.min.css') }}">
{% endblock %}


{% block javascripts_inline %}
    <script src="{{ asset('assets/js/jquery.tagsinput.min.js') }}"></script>
    <script>

        $('#btnYes').click(function(){
            $('#deleteConfirm').submit();
        });

        $('#product_tagString').tagsInput({
            'width':'100%',
            'height': '50px'
        });
    </script>
{% endblock %}

{% block avanzu_admin_footer %}
    <footer class="main-footer">
        <div class="pull-right hidden-xs"></div>
        <strong>Copyright &copy; 2016 <a href="http://www.prontopro.it">Pronto Pro</a>.</strong> All rights reserved.
    </footer>
{% endblock %}

